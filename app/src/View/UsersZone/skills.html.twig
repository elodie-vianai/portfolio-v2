{% extends 'Layout/index.html.twig' %}

{% block title %}
    Elodie's Portfolio - compétences
{% endblock %}



{% block stylesheets %}
    <link rel="stylesheet" href="/css/publicPages.css">
{% endblock %}

{% block header %}
    {% if 'user' in user.roles %}
        {% include ('UsersZone/Headers/userHeader.html.twig') %}
    {% else %}
        {% include ('UsersZone/Headers/publicHeader.html.twig') %}
    {% endif %}
{% endblock %}

{% block body %}
    <div class="row justify-content-center padding-bottom-5">
        <h1 class="h1 text-center">Mes compétences</h1>
    </div>

    <div class="row d-flex justify-content-end">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li class="page-item"><a class="page-link" id="tout" href="#">Tout afficher</a></li>
                <li class="page-item"><a class="page-link" id="bureautique" href="#">Bureautique</a></li>
                <li class="page-item"><a class="page-link" id="developpement" href="#">Développement</a></li>
                <li class="page-item"><a class="page-link" id="graphisme" href="#">Graphisme</a></li>
                <li class="page-item"><a class="page-link" id="langues" href="#">Langues</a></li>
            </ul>
        </nav>
    </div>


    <div class="row justify-content-center padding-bottom-3">
        {% for skill in skills %}
            <div class="image-container">
                <img src="/img{{ skill.image_path }}" id="{{ skill.name }}" class="image-skill {{ skill.category|lower }}"
                    data-toggle="tooltip" data-placement="top" title="{{ skill.name }}" template="">
            </div>
        {% endfor %}
    </div>


{% endblock %}